@page
@model CrudT2S.Pages.MovimentacaoList.EditModel

<br />
<h2 class="text-info">Atualizar dados de Movimentação</h2>
<br />

<div class="border container" style="padding:30px;">
    <form method="post">
        <input type="hidden" asp-for="Movimentacao.ID" />
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Movimentacao.Navio"></label>
            </div>
            <div class="col-6">
                <input asp-for="Movimentacao.Navio" class="form-control" />
            </div>
            <span asp-validation-for="Movimentacao.Navio" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Movimentacao.TipoMovimentacao">Número do Container</label>
            </div>
            <div class="col-6">
                <input asp-for="Movimentacao.TipoMovimentacao" class="form-control" />
            </div>
            <span asp-validation-for="Movimentacao.TipoMovimentacao" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Movimentacao.DataInicio"></label>
            </div>
            <div class="col-6">
                <input asp-for="Movimentacao.DataInicio" class="form-control" />
            </div>
            <span asp-validation-for="Movimentacao.DataInicio" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Movimentacao.DataFim"></label>
            </div>
            <div class="col-6">
                <input asp-for="Movimentacao.DataFim" class="form-control" />
            </div>
            <span asp-validation-for="Movimentacao.DataFim" class="text-danger"></span>
        </div>
       
        <div class="form-group row">
            <div class="col-3 offset-3">
                <input type="submit" value="Atualizar" class="btn btn-primary form-control" />
            </div>
            <div class="col-3">
                <a asp-page="Index" class="btn btn-success form-control">Voltar</a>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
